Description
    Calculates the area averaged wall heat flux at patches.

\*---------------------------------------------------------------------------*/

type            surfaceFieldValue;
libs            ("libfieldFunctionObjects.so");

log             true;
writeControl    timeStep;
writeInterval	10;
writeFields     false;

select          patch;
name            "pipe.*";

operation       areaAverage;

fields
(
    wallHeatFlux
);

